<%= field_set_tag 'Resultados' do -%>
  <h4>El Diametro de la rueda es </h4>
  <span class="input-xlarge uneditable-input"><%= diametro %>mm</span>
  <h4>Busca tu Neumatico Equivalente</h4>
  <%= form_tag calc_tires_path, :method => :get do -%>
    <div class="control-group">
      <div class="controls">
        <%= select_tag :lista, options_for_select([["Equivalentes", '']] +
        equivalentes, @width ? @width.id : params[:width]), :class => "small" %>
        <h5> o </h5>
        <%= select_tag :llanta, options_for_select([["Llantas Equivalentes", '']] +
        llantas.uniq.sort, @width ? @width.id : params[:width]), :class => "small" %>
      </div>
      <% for vehiculo in [4, 5, 6, 7, 8] %>
        <%= hidden_field_tag "vehicle[]", vehiculo %>
      <% end %>
      <%= submit_tag t(:search), :name => nil, :class => "btn btn-primary btn-small" %>
    </div>
  <% end -%>
<% end -%>
