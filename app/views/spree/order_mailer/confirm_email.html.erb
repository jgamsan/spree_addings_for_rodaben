<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

  <!-- Facebook sharing information tags -->
  <meta property="og:title" content="*|MC:SUBJECT|*" />

  <title>*|MC:SUBJECT|*</title>
  <link href="/assets/store/email.css" rel="stylesheet" type="text/css" />
</head>
<body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0">
  <center>
    <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="backgroundTable">
      <tr>
        <td align="center" valign="top" style="padding-top:20px;">
          <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateContainer">
            <tr>
              <td align="center" valign="top">
                <!-- // Begin Template Header \\ -->
                <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateHeader">
                  <tr>
                    <td class="headerContent">
                      <!-- // Begin Module: Standard Header Image \\ -->
                      <img src="/assets/logo.png" style="max-width:600px;" id="headerImage campaign-icon" mc:label="header_image" mc:edit="header_image" mc:allowdesigner mc:allowtext />
                      <!-- // End Module: Standard Header Image \\ -->
                    </td>
                  </tr>
                </table>
                <!-- // End Template Header \\ -->
              </td>
            </tr>
            <tr>
              <td align="center" valign="top">
              <!-- // Begin Template Body \\ -->
                <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody">
                  <tr>
                    <td valign="top">
                      <!-- // Begin Module: Standard Content \\ -->
                      <table border="0" cellpadding="20" cellspacing="0" width="100%">
                        <tr>
                          <td valign="top" class="bodyContent">
                            <div mc:edit="std_content00">
                              <strong><%= t('order_mailer.confirm_email.dear_customer') %></strong>
                              <%= t('order_mailer.confirm_email.instructions') %>
                            </div>
                          </td>
                        </tr>
                        <tr>
                          <td valign="top" style="padding-top:0; padding-bottom:0;">
                            <h4><%= t('order_mailer.confirm_email.order_summary') %></h4>
                            <table border="0" cellpadding="10" cellspacing="0" width="100%" class="templateDataTable">
                              <tr>
                                <th scope="col" valign="top" width="10%" class="dataTableHeading" mc:edit="data_table_heading00">CODIGO</th>
                                <th scope="col" valign="top" width="50%" class="dataTableHeading" mc:edit="data_table_heading01">NOMBRE</th>
                                <th scope="col" valign="top" width="10%" class="dataTableHeading" mc:edit="data_table_heading02">CANTIDAD</th>
                                <th scope="col" valign="top" width="15%" class="dataTableHeading" mc:edit="data_table_heading03">PRECIO</th>
                                <th scope="col" valign="top" width="15%" class="dataTableHeading" mc:edit="data_table_heading04">TOTAL</th>
                              </tr>
                              <% @order.line_items.each do |item| %>
                                <tr mc:repeatable>
                                  <td valign="top" class="dataTableContent" mc:edit="data_table_content00"><%= item.variant.sku %></td>
                                  <td valign="top" class="dataTableContent" mc:edit="data_table_content01"><%= raw(item.variant.product.name) %></td>
                                  <td valign="top" class="dataTableContent" mc:edit="data_table_content02"><%=item.quantity%></td>
                                  <td valign="top" class="dataTableContent" mc:edit="data_table_content02"><%= money item.price %></td>
                                  <td valign="top" class="dataTableContent" mc:edit="data_table_content02"><%= money(item.price * item.quantity) %></td>
                                </tr>
                              <% end -%>
                              <tr mc:repeatable>
                                <td colspan="4" valign="top" style="text-align:right;" class="dataTableContent" mc:edit="data_table_content00"><%= t('order_mailer.confirm_email.subtotal') %></td>
                                <td valign="top" class="dataTableContent" mc:edit="data_table_content00"><%= money @order.item_total %></td>
                              </tr>
                              <% @order.adjustments.eligible.each do |adjustment| %>
                                <tr mc:repeatable>
                                  <td colspan="4" valign="top" style="text-align:right;" class="dataTableContent" mc:edit="data_table_content00"><%= raw(adjustment.label) %></td>
                                  <td valign="top" class="dataTableContent" mc:edit="data_table_content00"><%= money(adjustment.amount) %></td>
                                </tr>
                              <% end %>
                              <tr mc:repeatable>
                                <td colspan="4" valign="top" style="text-align:right;" class="dataTableContent" mc:edit="data_table_content00"><%= t('order_mailer.confirm_email.total') %></td>
                                <td valign="top" class="dataTableContent" mc:edit="data_table_content00"><%= money(@order.total) %></td>
                              </tr>
                            </table>
                          </td>
                        </tr>
                        <tr>
                          <td valign="top" class="bodyContent">
                            <div mc:edit="std_content01">
                              <%= t('order_mailer.confirm_email.thanks') %>
                            </div>
                          </td>
                        </tr>
                      </table>
                      <!-- // End Module: Standard Content \\ -->
                    </td>
                  </tr>
                </table>
                <!-- // End Template Body \\ -->
              </td>
            </tr>
          </table>
          <br />
        </td>
      </tr>
    </table>
  </center>
</body>
</html>
