<h6 class="product-section-title"><%= t('tires_info')%></h6>
  <table id="tires_info" class="table-display" data-hook width="100%">
    <tbody>
      <% for variant in @variants
        css_class = cycle('even', 'odd') %>
        <tr class="<%= css_class %>">
          <td><strong>Ancho</strong></td>
          <td><%= variant.tire_width.name %></td>
        </tr>
        <tr class="<%= css_class %>">
          <td><strong>Perfil</strong></td>
          <td><%= variant.tire_serial.name %></td>
        </tr>
        <tr class="<%= css_class %>">
          <td><strong>Llanta</strong></td>
          <td><%= variant.tire_innertube.name %></td>
        </tr>
        <tr class="<%= css_class %>">
          <td><strong>Codigo Velocidad</strong></td>
          <td><%= variant.tire_speed_code.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
