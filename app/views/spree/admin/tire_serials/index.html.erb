<%= render :partial => 'spree/admin/shared/tires_setting_menu' %>

<% content_for :page_title do %>
  <%= t(:tire_serials) %>
<% end %>
<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_tire_serial), new_admin_tire_serial_url, :icon => 'icon-plus', :id => 'admin_new_tire_serial_link' %>
  </li>
<% end %>

<table class="index responsive" id="tire_serials_listing">
  <colgroup>
    <col style="width: 20%;">
    <col style="width: 20%;">
  </colgroup>
  <thead data-hook="admin_tire_serials_index_headers">
    <th><%= sort_link @search, :name, t(:name) %></th>
    <th><%= sort_link @search, :name, t(:is_mm?) %></th>
    <th data-hook="admin_tire_serials_index_header_actions" class="actions">
    </th>
  </thead>
  <tbody id="tire_serials">
    <%= render :partial => 'spree/admin/tire_serials/tire_serial', :collection => @tire_serials, :as => :serial %>
  </tbody>
</table>
<div id="paginator"><%= paginate @tire_serials, :remote => true %></div>

