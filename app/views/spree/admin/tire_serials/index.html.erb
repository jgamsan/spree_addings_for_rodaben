<%#= render :partial => 'tires_setting_menu' %>

<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li>
      <%= button_link_to t(:new_tire_serial), new_admin_tire_serial_url, :icon => 'add', :id => 'admin_new_tire_serial_link' %>
    </li>
  </ul>
  <br class="clear" />
</div>

<h1><%= t(:tire_serials) %></h1>

<table class="index" id="tire_serials_listing">
  <thead data-hook="admin_tire_serials_index_headers">
    <th><%= t(:name) %></th>
    <th data-hook="admin_tire_serials_index_header_actions">
    </th>
  </thead>
  <tbody>
    <% @serials.each do |serial|%>
      <tr id="<%= spree_dom_id serial %>" data-hook="admin_tire_serials_index_rows">
        <td serial="60px"><%= serial.name %></td>
        <td serial="140px" data-hook="admin_tire_serials_index_row_actions">
          <%= link_to_with_icon 'edit', t(:edit), edit_admin_tire_serial_url(serial) %> &nbsp;
          <%= link_to_delete serial , {:url => admin_tire_serial_url(serial) }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @serials %>
