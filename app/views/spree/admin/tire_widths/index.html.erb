<%= render :partial => 'tires_setting_menu' %>

<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li>
      <%= button_link_to t(:new_tire_width), new_admin_tire_width_url, :icon => 'add', :id => 'admin_new_tire_width_link' %>
    </li>
  </ul>
  <br class="clear" />
</div>

<h1><%= t(:tire_widths) %></h1>

<table class="index" id="tire_widths_listing">
  <thead data-hook="admin_tire_widths_index_headers">
    <th><%= t(:name) %></th>
    <th data-hook="admin_tire_widths_index_header_actions">
    </th>
  </thead>
  <tbody>
    <% @widths.each do |width|%>
      <tr id="<%= spree_dom_id width %>" data-hook="admin_tire_widths_index_rows">
        <td width="60px"><%= width.name %></td>
        <td width="140px" data-hook="admin_tire_widths_index_row_actions">
          <%= link_to_with_icon 'edit', t(:edit), edit_admin_tire_width_url(width) %> &nbsp;
          <%= link_to_delete width , {:url => admin_tire_width_url(width) }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @widths %>
